  }

  .card-halftone:hover {
    border: 2px solid black;
  }

  .card-halftone::after {
    content: "";
    position: absolute;
    inset: 0;
    top: 0.4rem;
    left: 0.4rem;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle, black 0.03rem, transparent 0%),
      radial-gradient(circle, black 0.02rem, transparent 0%);
    background-size: 0.15rem 0.15rem;
    background-position:
      0 0,
      0.15rem 0.15rem;
    z-index: -1;
  }
