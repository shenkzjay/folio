      site: "https://cssillustrations.netlify.app/",
      github: "https://github.com/shenkzjay/cssillustri",
    },
  ];

  return pages.map(({ slug, title, description, img, tags, site, github }) => {
    return {
      params: { slug },
      props: { title, description, img, tags, slug, site, github },
