  });
}

const { title, description, img, tags, slug, site, github } = Astro.props;
---

<Layout title={slug}>
  <html>
    <body>
      <main class="w-full">
        <div class="md:w-[700px] w-full md:mx-auto relative flex flex-col gap-8 mb-20">
          <nav class="flex flex-row justify-between mx-6 md:mx-0 mt-12">
            <a
              href="/"
              onclick="history.back()"
              id="back-button"
              data-astro-history="push"
              class="flex flex-row items-center group gap-1 underline"
            >
              <!-- <span
                class="flex group-active:[transform:scaleY(0.8)] justify-center items-center w-8 h-8 p-2 rounded-[12px] mr-2"
                ><BackButton /></span
              > -->
              ‚Üê Back</a
            >

            <div class="flex flex-row gap-10">
              {
                github !== "" && (
                  <a
                    href={github}
                    target="_blank"
                    rel="noreferrer"
                    class="flex relative underline hover:[transform:translateY(-5px)] [transition:.3s_ease-in] "
                  >
                    <span class="">
                      {/* <GithubIcon /> */}
                      Github
                    </span>
                  </a>
                )
              }

              {
                site !== "" && (
                  <a
                    href={site}
                    target="_blank"
                    rel="noreferrer"
                    class=" flex relative underline hover:[transform:translateY(-5px)] [transition:.3s_ease-in]"
                  >
                    <span class="z-10">Go to site</span>
                    {/* <Linkarrow /> */}
                  </a>
                )
              }
            </div>
          </nav>

          <CardLayout title={title} , slug={slug} videolink={img} height="27" />
          <p class="mx-6 md:mx-0">{description}</p>
          <ul class="flex flex-row gap-4 flex-wrap mx-6 md:mx-0">
            {
              tags.map((item) => (
                <li class="outline flex !w-fit  px-4 py-1 text-sm  text-[#676767] card-halftone ">
                  <p class="z-10">{item}</p>
                  <span class="tags flex" />
                </li>
              ))
            }
          </ul>
        </div>
      </main>
    </body>
  </html>
</Layout>

<style>
  @media screen and (max-width: 800px) {
    .tobey {
      width: 100%;
    }
  }

  body {
    background-color: var(--bg-color);
    color: var(--font-color);
  }

  .gotoSiteButton::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(#e6eaee, #e6eaee) no-repeat;
    width: 100%;
    height: 90%;
    border-radius: 12px;
  }

  .gotoSiteButton::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background:
      radial-gradient(ellipse, rgba(255, 255, 255, 1) 49%, transparent 50%) 5% 5%/ 1.5rem 0.4rem no-repeat,
      linear-gradient(#c9c7c7, #c9c7c7) 50% 0 / 100% 100% no-repeat;
    width: 90%;
    height: 80%;
    margin: 0 6px;
    border-radius: 12px;
  }

  .tags {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(white, white) no-repeat;
    width: 100%;
    height: 90%;
    border-radius: 10px;
  }

  /* 
  .gotoSiteButton::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background: radial-gradient(ellipse, white 49.5%, transparent 50%) 0% 0% / 1rem 0.3rem
      no-repeat;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    transform: skew(0deg, -20deg);
  } */

  .card-halftone {
    position: relative;
    width: 100%;
    height: 100%;
    background: white;
  }

  .card-halftone:hover {
    border: 2px solid black;
  }

  .card-halftone::after {
    content: "";
    position: absolute;
    inset: 0;
    top: 0.4rem;
    left: 0.4rem;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, black 0.03rem, transparent 0%),
      radial-gradient(circle, black 0.02rem, transparent 0%);
    background-size: 0.15rem 0.15rem;
    background-position:
      0 0,
      0.15rem 0.15rem;
    z-index: -1;
  }
</style>
